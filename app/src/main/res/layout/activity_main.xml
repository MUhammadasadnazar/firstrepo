<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
     tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/blueroundcorners"
            android:layout_height="?attr/actionBarSize"></RelativeLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="14dp"
            app:cardCornerRadius="15dp"
            android:elevation="10dp"
            app:cardElevation="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="14dp">
            <LinearLayout
                android:background="@color/colorwhite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="13"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3.8"
                    >

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentLeft="true">
                        <me.tankery.lib.circularseekbar.CircularSeekBar
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:cs_circle_color = "@color/colorLightGray"
                            app:cs_circle_progress_color = "@color/colorBlue"
                            app:cs_pointer_color = "@color/colorBlue"
                            app:cs_circle_stroke_width = "10dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/seekbarincome">
                        </me.tankery.lib.circularseekbar.CircularSeekBar>
                        <me.tankery.lib.circularseekbar.CircularSeekBar
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_centerInParent="true"
                            app:cs_circle_stroke_width = "10dp"
                            app:cs_circle_color = "@color/colorLightGray"
                            app:cs_circle_progress_color = "@color/colorAccent"
                            app:cs_pointer_color = "@color/colorAccent"
                            android:id="@+id/seekbarexpenses">
                        </me.tankery.lib.circularseekbar.CircularSeekBar>
                        <me.tankery.lib.circularseekbar.CircularSeekBar
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            app:cs_circle_stroke_width = "10dp"
                            app:cs_circle_color = "@color/colorLightGray"
                            app:cs_circle_progress_color = "@color/coloryellow"
                            app:cs_pointer_color = "@color/coloryellow"
                            android:layout_centerInParent="true"
                            android:id="@+id/seekbarsavinggoals">
                        </me.tankery.lib.circularseekbar.CircularSeekBar>
                    </RelativeLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:weightSum="4"
                            android:gravity="center|left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                app:cardCornerRadius="7.5dp"
                                android:padding="5dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:background="@color/colorBlue"></TextView>
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_marginLeft="10dp"
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:text="Income"></TextView>
                            <TextView
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:textColor="#000"
                                android:layout_height="wrap_content"
                                android:id="@+id/tvincomepercent"></TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:weightSum="4"
                            android:gravity="center|left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="7.5dp">
                                <TextView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:background="@color/colorAccent"></TextView>
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_marginLeft="10dp"
                                android:layout_weight="2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Expenses"></TextView>
                            <TextView
                                android:layout_weight="1"
                                android:layout_marginLeft="5dp"
                                android:layout_width="0dp"
                                android:textColor="@color/colorblack"
                                android:layout_height="wrap_content"
                                android:id="@+id/tvexpensespercent"></TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:weightSum="4"
                            android:gravity="center|left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="7.5dp">
                                <TextView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:background="@color/coloryellow"></TextView>
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_marginLeft="10dp"
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:text="Goals"></TextView>
                            <TextView
                                android:layout_marginLeft="5dp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:textColor="@color/colorblack"
                                android:layout_height="wrap_content"
                                android:id="@+id/tvgoalspercent"></TextView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="15dp"
                    app:cardElevation="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:elevation="10dp">
                    <LinearLayout
                        android:onClick="showIncome"
                        android:weightSum="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <RelativeLayout
                            android:id="@+id/rlayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:background="@color/colorBlue">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:textColor="@color/colorwhite"
                                android:textSize="20dp"
                                android:text="Income"></TextView>

                            <TextView
                                android:id="@+id/tvtotalincome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="Income"
                                android:textColor="@color/colorwhite"
                                android:textSize="20dp"></TextView>
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">
                            <LinearLayout
                                android:layout_below="@+id/rlayout"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical"
                                android:gravity="center|left"
                                android:layout_height="match_parent"
                                >
                                <TextView
                                    android:id="@+id/tvincomebugted"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="20dp"
                                    android:textColor="@color/colorBlue"
                                    android:text="$200"></TextView>
                                <SeekBar
                                    android:id="@+id/seekbarincomee"
                                    android:layout_width="150dp"
                                    android:progressTint="@color/colorBlue"
                                    android:thumb="@color/colorBlue"
                                    android:layout_height="wrap_content"></SeekBar>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="total Income"></TextView>
                            </LinearLayout>
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="60dp"
                                android:layout_centerVertical="true"
                                android:layout_below="@+id/rlayout"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/incomee"></ImageView>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    app:cardBackgroundColor="@color/colorwhite"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:cardElevation="5dp"
                    android:elevation="10dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:onClick="showExpensesList"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <RelativeLayout
                            android:id="@+id/r2layout"
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorAccent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:textColor="@color/colorwhite"
                                android:textSize="20dp"
                                android:text="Expenses"></TextView>
                            <TextView
                                android:id="@+id/tvExpensestotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/colorwhite"
                                android:textSize="20dp"
                                android:text="Income"></TextView>
                        </RelativeLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_below="@+id/r2layout"
                                android:layout_width="match_parent"
                                 android:layout_weight="1"
                                android:layout_marginLeft="10dp"
                                 android:orientation="vertical"
                                android:gravity="center|left"
                                android:layout_height="match_parent"
                                >
                                <TextView
                                    android:textColor="@color/colorAccent"
                                    android:id="@+id/tvtotalexpenes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="20dp"
                                    android:text="$200"></TextView>
                                <SeekBar
                                    android:progressTint="@color/colorAccent"
                                    android:thumb="@color/colorAccent"
                                    android:id="@+id/seekbarexpensess"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"></SeekBar>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="total Expenses"></TextView>
                            </LinearLayout>
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="80dp"
                                android:layout_below="@+id/r2layout"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/expensss"></ImageView>
                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    app:cardElevation="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/colorwhite"
                    android:elevation="10dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:onClick="target"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <RelativeLayout
                            android:id="@+id/r3layout"
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/coloryellow">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:textColor="@color/colorwhite"
                                android:textSize="20dp"
                                android:text="Saving Goals"></TextView>
                            <TextView
                                android:id="@+id/tvgolastotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/colorwhite"
                                android:textSize="20dp"
                                android:text="Income"></TextView>
                        </RelativeLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_below="@+id/r3layout"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="center|left"
                                android:orientation="vertical"
                                android:layout_height="match_parent"
                                >
                                <TextView
                                    android:id="@+id/tvgoalssaved"
                                    android:textColor="@color/coloryellow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="20dp"
                                    android:text="$200"></TextView>
                                <SeekBar
                                    android:id="@+id/seekbargoals"
                                    android:progressTint="@color/coloryellow"
                                    android:thumb="@color/coloryellow"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"></SeekBar>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="total Savings"></TextView>
                            </LinearLayout>
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="80dp"
                                android:layout_below="@+id/r3layout"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/saving"></ImageView>

                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        ads:adUnitId="@string/banner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        ads:adSize="BANNER"
        ></com.google.android.gms.ads.AdView>


</LinearLayout>