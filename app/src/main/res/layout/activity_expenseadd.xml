<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Expenselist">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp">
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/goaldeposit"></ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:background="@drawable/savingtrackerbackground">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    >
                    <TextView
                        android:id="@+id/tvexpenname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TOTAL BUDGETED"
                        android:textSize="22dp"
                        android:textColor="@color/colorwhite"></TextView>
                    <TextView
                        android:layout_marginLeft="50dp"
                        android:id="@+id/tvtotalbudgted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_centerInParent="true"
                        android:textColor="@color/colorwhite"
                        android:text="500"></TextView>

                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="25dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Remaining:"
                        android:textSize="12sp"
                        android:textColor="@color/colorwhite"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></TextView>
                    <TextView
                        android:id="@+id/tvremainingbgt"
                        android:textSize="15sp"
                        android:layout_marginLeft="40dp"
                        android:textColor="@color/colorwhite"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="25dp"
                    android:orientation="vertical"
                    android:weightSum="3"
                    android:layout_height="wrap_content"
                     >
                    <RelativeLayout
                        android:layout_width="150dp"
                         android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/tvspent"
                            android:text="Total Saving"
                            android:textSize="15sp"
                            android:textColor="@color/colorwhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"></TextView>
                    </RelativeLayout>
                    <SeekBar
                        android:id="@+id/seekbarexpense"
                        android:progressTint="@color/colorwhite"
                        android:backgroundTint="@color/colorLightGray"
                        android:layout_width="150dp"
                        android:layout_height="0dp"
                        android:thumb="@color/colorBlue"
                         android:layout_weight="1"></SeekBar>
                    <TextView
                        android:text="Saved Amount"
                        android:textSize="12sp"
                        android:textColor="@color/colorwhite"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"></TextView>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/recyclerviewexpenseadd"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView5"
        ads:adUnitId="@string/banner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        ads:adSize="BANNER"></com.google.android.gms.ads.AdView>




</LinearLayout>
